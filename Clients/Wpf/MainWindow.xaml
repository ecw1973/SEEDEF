<Window
    x:Class="SignalRChatClient.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SignalRChatClient"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SignalR Chat WPF Client"
    Width="640"
    Height="480"
    mc:Ignorable="d">
    <StackPanel>
        <ListBox x:Name="messagesList"
            Height="350"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            BorderBrush="Gainsboro"
            BorderThickness="1"/>
        <StackPanel Margin="10" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button x:Name="connectButton"
                Width="95"
                Height="41"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="connectButton_Click"
                Content="Connect"/>
            <Button x:Name="disconnectButton"
                Width="95"
                Height="41"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="disconnectButton_Click"
                Content="Disconnect"/>
        </StackPanel>

    </StackPanel>
</Window>
